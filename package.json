{
  "name": "rest-client-sdk",
  "version": "0.15.0",
  "description": "Rest Client SDK for API",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "test": "bundlesize && mocha --compilers js:babel-core/register --require ./test/test_helper.js  --recursive",
    "test:watch": "npm run test -- --watch",
    "build": "rollup -c",
    "check:src": "npm run test",
    "prepublish": "npm run clean && npm run check:src && npm run build"
  },
  "dependencies": {
    "domurl": "^2.1.7"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "bundlesize": "^0.6.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "fetch-mock": "^4.6.0",
    "form-data": "^2.1.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapado/rest-client-js-sdk.git"
  },
  "keywords": [
    "Rest",
    "SDK",
    "API"
  ],
  "author": "Mapado",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mapado/rest-client-js-sdk/issues"
  },
  "homepage": "https://github.com/mapado/rest-client-js-sdk#readme",
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "class-methods-use-this": [
        0
      ],
      "new-cap": [
        2,
        {
          "newIsCap": true,
          "capIsNew": false
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "allow": [
            "_groups"
          ]
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ],
      "react/prefer-es6-class": 1
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "bundlesize": [
    {
      "path": "./dist/index.es.js",
      "threshold": "7.5 Kb"
    }
  ]
}
